---
layout: null
---
{
  "generated_at": "{{ site.time | date_to_xmlschema }}",
  "site_url": "{{ site.url }}{{ site.baseurl }}",
  "total_notes": {{ site.notes | size }},
  "notes": [
    {% assign sorted_notes = site.notes | sort: "last_modified_at" | reverse %}
    {% for note in sorted_notes %}
    {% assign note_date = note.last_modified_at | default: note.date | default: site.time %}
    {
      "title": {{ note.title | jsonify }},
      "url": "{{ site.url }}{{ site.baseurl }}{{ note.url }}",
      "slug": {{ note.url | remove: "/" | jsonify }},
      "last_modified_at": "{{ note_date | date_to_xmlschema }}",
      "tags": {{ note.tags | default: "" | jsonify }},
      "excerpt": {{ note.content | strip_html | strip_newlines | truncatewords: 50 | jsonify }}
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}
